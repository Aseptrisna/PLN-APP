<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="@string/nomor_asset"
        android:layout_width="match_parent"
        android:layout_height="25sp"/>
    <TextView
        android:id="@+id/NomorAsset"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="50sp"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="@string/kodeasset"
        android:layout_width="match_parent"
        android:layout_height="25sp"/>
    <TextView
        android:id="@+id/KodeAsset"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="50sp"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Deskripsi"
        android:layout_width="match_parent"
        android:layout_height="25sp"/>
    <TextView
        android:id="@+id/DeskrispiAsset"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="100sp"/>
    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/editasset"
            android:layout_gravity="left"
            android:gravity="left"
            android:background="@drawable/ic_create"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <Button
            android:id="@+id/hapusasset"
            android:layout_marginLeft="20sp"
            android:layout_gravity="left"
            android:gravity="right"
            android:background="@drawable/ic_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>