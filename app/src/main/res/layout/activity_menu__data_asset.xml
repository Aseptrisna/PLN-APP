<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Features.Menu_DataAsset">
    <LinearLayout
        android:id="@+id/FromdataAsset"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/linear_backgroung">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/TopAsset"
            android:text=""
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <EditText
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/CariAsset"
            android:hint="@string/masukan_kode_asset"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <Button
            android:onClick="cariasset"
            android:id="@+id/Btncari"
            android:textColor="@color/white"
            android:text="Cari"
            android:background="@drawable/btn"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="200dp"
            android:layout_height="50dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/ListAsset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <Button
            android:onClick="addasset"
            android:id="@+id/BtnTambah"
            android:textColor="@color/white"
            android:text="@string/tambah_asset"
            android:background="@drawable/btn"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="200dp"
            android:layout_height="50dp"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>